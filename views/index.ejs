<% include ./partials/header %>


<div class="container">
  <div class="insidecontainer">
      <h1 style="padding:auto;">Blog Home</h1>
        <% blogs.forEach(function(blog){  %>
          <div class="card mb-3">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="<%=blog.image %>" class="card-img" alt="<%=blog.title %>"  style="max-height:220px;">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=blog.title %></h5>
                  <p class="card-text"><%=blog.body.substring(0, 100) %>...</p>
                  <a href="/blogs/<%= blog._id %>"><button type="submit" class="btn btn-primary">Read More</button></a>
                  <form class="" action="/blogs/<%= blog._id%>?_method=DELETE" method="post">
                      <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                  <p class="card-text"><small class="text-muted"><%=blog.created.toDateString() %></small></p>
                </div>
              </div>

            </div>
          </div>
        <% }) %>
  </div>
</div>

<% include ./partials/footer %>
