<% include ../partials/header %>



<div class="container">
  <div class="insidecontainer" style="padding-left:30%;">
    <h1 style="padding:auto;">Login</h1>
    <div class="card bg-light mb-3" style="max-width: 30rem;">
      <div class="card-header">Welcome Back to Blogging</div>
      <div class="card-body">
        <form action="/login" method="POST">
          <div class="form-group">
            <label>Username</label>
            <input type="username" class="form-control" name="username" placeholder="Enter Username">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" placeholder="Enter Password">
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
