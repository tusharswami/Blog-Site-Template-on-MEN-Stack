<% include ../partials/header %>



<div class="container">
  <div class="insidecontainer" style="padding-left:30%;">
    <h1 style="padding:auto;">Edit Blog Page</h1>
    <div class="card bg-light mb-3" style="max-width: 30rem;">
      <div class="card-header">Editing <strong><%= blog.title%></strong></div>
      <div class="card-body">
        <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="blog[title]" value="<%=blog.title%>">
          </div>
          <div class="form-group">
            <label>Image</label>
            <input type="text" class="form-control" name="blog[image]" value="<%=blog.image%>">
          </div>
          <div class="form-group">
            <label>Body</label>
            <textarea name="blog[body]" class="form-control" rows="8" cols="80"><%=blog.body%></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <form class="" action="/blogs/<%= blog._id%>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
